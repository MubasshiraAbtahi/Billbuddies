# Bill Buddies Backend Environment Configuration
# Production: Change these values before deploying

# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# Database Configuration
# MongoDB Local - Using local installation
MONGODB_URI=mongodb://localhost:27017/billbuddies

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_at_least_32_chars_long
JWT_EXPIRE=7d

# Google Cloud Vision API for Bill Scanning (OCR)
# Setup: https://console.cloud.google.com/
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_VISION_API_KEY=your-google-cloud-vision-api-key

# Stripe Payment Integration (optional - can be skipped for now)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email Service Configuration (optional)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password

# Logging
LOG_LEVEL=debug
